{
  "manifest_version": 3,
  "name": "Open Weather",
  "version": "1.0",
  "description": "Fetch current weather for a city using Open-Meteo (no API key required).",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://api.openweathermap.org/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Weather",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
